# ============================================
# FRONTEND CONFIGURATION (Vite)
# ============================================

# API URL - Backend API endpoint
# Development: http://localhost:5001/api
# Production: https://your-api-domain.com/api
VITE_API_URL=http://localhost:5001/api

# Google OAuth Client ID (for frontend)
VITE_GOOGLE_CLIENT_ID=your-google-client-id-here

# GitHub OAuth Client ID (for frontend)
VITE_GITHUB_CLIENT_ID=your-github-client-id-here

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_ENV=development
FLASK_APP=api.app
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-random
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# OAUTH CREDENTIALS
# ============================================
# Google OAuth - Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# GitHub OAuth - Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_PATH=./data/moodtracker.db
USERS_DATABASE_PATH=./api/users_database.json
JOURNAL_DATABASE_PATH=./data/journal.db

# ============================================
# REDIS CONFIGURATION (Phase 4)
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
RATE_LIMIT_STORAGE=redis://localhost:6379/1

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=5001
FRONTEND_URL=http://localhost:5173

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_DEFAULT=1000 per day, 100 per hour
RATE_LIMIT_LOGIN=5 per minute
RATE_LIMIT_REGISTER=3 per hour
RATE_LIMIT_PREDICTION=30 per minute
RATE_LIMIT_CSV=5 per hour

# ============================================
# INPUT VALIDATION
# ============================================
MAX_TEXT_LENGTH=5000
MAX_FILE_SIZE=10485760
MAX_CSV_ROWS=1000

# ============================================
# ML MODEL CONFIGURATION
# ============================================
ROBERTA_MODEL_PATH=../Fine_tuned_RoBERTa/roberta_sentiment_model
ROBERTA_TOKENIZER_PATH=../Fine_tuned_RoBERTa/roberta_tokenizer
LSTM_MODEL_PATH=../mentalbert_lstm_model.keras

# ============================================
# LOGGING CONFIGURATION (Phase 4)
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s [%(levelname)s] %(name)s: %(message)s
LOG_FILE=./logs/api.log

# ============================================
# MONITORING & ERROR TRACKING (Phase 4)
# ============================================
# Sentry DSN (for error tracking)
SENTRY_DSN=

# Sentry Environment
SENTRY_ENVIRONMENT=development

# Enable performance monitoring
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# SECURITY HEADERS (Phase 4)
# ============================================
ENABLE_SECURITY_HEADERS=True
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'

# ============================================
# CACHING (Phase 4)
# ============================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=moodtracker_

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Set these in production .env file:
# SECRET_KEY=<generate-with-secrets.token_hex(32)>
# JWT_SECRET_KEY=<generate-with-secrets.token_hex(32)>
# REDIS_PASSWORD=<strong-password>
# FLASK_ENV=production
# DEBUG=False
# LOG_LEVEL=WARNING
